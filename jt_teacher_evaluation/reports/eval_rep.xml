<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="eval_receipt_report_template">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        
                        <div class="container-justify-content-center text-center">
                            <div class="row">
                                
                                <b>Name : </b><t t-esc="o.name"/>
                                <br/>
                                <b>Evauation Date : </b> <t t-esc="o.date"/>
                                <br/>
                                <b>Evaluator Name : </b> <t t-esc="o.user_id.name"/>
                                <br/>
                            </div>
                            <t t-set="length" t-value="len(o.tab_ids)" />
                            <table class="table">
                                <tr>
                                    <td rowspan="2">Number</td>
                                    <td colspan="2">Title Evaluation</td>
                                    <td rowspan="2">Total</td>
                                </tr>
                                <tr>
                                    <t t-foreach="range(1, length+1)" t-as="no">
                                        <td><t t-esc="no"/></td>
                                    </t>
                                </tr>
                                <t t-set="count" t-value="1"/>
                                <tr>
                                    <td>
                                        <t t-esc='count'/>
                                        <t t-set="count" t-value="count+1"/>
                                    </td>
                                     <t t-foreach="o.tab_ids" t-as="record">
                                        <td>
                                            <t t-esc="record.rating_id.rate" />
                                        </td>
                                    </t>
                                    <td> 
                                        <t t-esc="o.total"/>
                                    </td>
                                </tr>
                            </table>

                            <table class="table">
                                <tr>
                                    <td rowspan="2">Number</td>
                                    <td rowspan="2">Information of Evaluation</td>
                                </tr>
                                <tbody>
                                    <t t-set="count" t-value="1" />
                                    <t t-foreach="o.tab_ids" t-as="record">
                                        <tr>
                                            <td>
                                                <t t-esc="count"/>
                                                <t t-set="count" t-value="count + 1" />
                                            </td>
                                            <td><t t-esc="record.question_id.description" /></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </template>



                


        <record id="eval_receipt_template_paperformat" model="report.paperformat">
            <field name="name">eval.receipt.paperformat</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">40</field>
            <field name="dpi">90</field>
        </record>

        <record id="fee_receipt_report" model="ir.actions.report">
            <field name="name">Eval Receipt</field>
            <field name="model">eval.profile</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">jt_teacher_evaluation.eval_receipt_report_template</field>
            <field name="report_file">jt_teacher_evaluation.eval_receipt_report_template</field>
            <field name="paperformat_id" ref="jt_teacher_evaluation.eval_receipt_template_paperformat"/>
            <field name="print_report_name">"Eval Reciept"</field>
            <field name="binding_model_id" ref="jt_teacher_evaluation.model_eval_profile"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>