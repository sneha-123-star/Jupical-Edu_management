<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <template id="yellow_icard_report">
                <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div style="width:100%;height:100%;padding:10px;">
                        <div style="width:670px;height:990px;background-image:url('jt_education_reports/static/src/img/id_yellow_front.png')">
                            
                            <div>
                                <div style="height:30%;width:100%;align:center;">
                                   <p><span style="font-size:22px;color:white;font-weight:bold;margin-left:20px;margin-top:50px;" t-field="res_company.name"/></p>
                                </div>
                            </div>
                            <div style="clear:both;"/>
                            <div style="height:30%;">
                                <div style="margin-left:0px;margin-top:0px;">
                                    <img t-attf-src="data:image/png;base64,{{o.image_1920}}" style="border-radius:130px;height:255px;width:255px;margin-left:210px;margin-top:78px"/>
                                </div>
                                <div style="text-align:center;">
                                    <p style="font-size:35px;margin-top:65px;color:black;font-weight:bold;text-transform:uppercase;"><span t-field="o.name"/></p>
                                </div>
                                <div style="text-align:center;">
                                    <p style="font-size:20px;color:black;font-weight:bold;margin-top:0px">ID NUMBER :&#160;&#160;&#160;<span t-field="o.stud_id"/></p>
                                    <p style="font-size:28px;">Standard :&#160;&#160;&#160;<span t-field="o.standard.name"/> - <span t-field="o.div.name"/></p>
                                    <p style="font-size:28px;margin-top:-5px;">Phone :&#160;&#160;&#160;<span t-field="o.phone"/></p>
                                    <p style="font-size:28px;margin-top:-5px;">Valid Till :&#160;&#160;&#160;<span t-field="o.curr_year"/></p>
                                    <img alt="Qrcode" t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('QR', o.stud_id, 600, 120)" style="text-align:center;height:150px;width:150px;border:1px solid;padding:5px;margin-top:0px;"/>
                                </div>
                            </div> 
                        </div> 
                    </div>
                </div>
                </t>
            </t>
        </template>

        <record id="yellow_front_idcard" model="report.paperformat">
            <field name="name">Employee Yellow Front Icard</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">143</field>
            <field name="page_width">100</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">2</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">40</field>
            <field name="dpi">90</field>
        </record>

        <record id="yellow_front_icard_report" model="ir.actions.report">
            <field name="name">Yellow Id-Card Report FRONT</field>
            <field name="model">res.partner</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">jt_education_reports.yellow_icard_report</field>
            <field name="report_file">jt_education_reports.yellow_icard_report</field>
            <field name="paperformat_id" ref="jt_education_reports.yellow_front_idcard"/>
            <field name="print_report_name">(object.name)</field>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="binding_type">report</field>
        </record>

        <!-- <report 
            id="yellow_front_icard_report"
