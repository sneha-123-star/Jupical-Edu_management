<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="employee_backside_icard_template">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div style="width:100%;height:100%;border:4px solid #14877d;border-radius:25px;background-image:url('jt_education_reports/static/src/img/ninteen.jpg')">
                            <div style="height:10%;width:100%;text-align:center;">
                                <img t-attf-src="data:image/png;base64,{{res_company.logo}}" style="width:50px;height:30px;"/>
                            </div>
                            <div style="height:70%;width:100%;text-align:left;color:black;font-size:10px;border-top:4px solid #14877d;border-bottom:4px solid #14877d;">
                                <center>
                                    <table style="font-size:10px;">
                                        <tr>
                                            <td valign="top" style="padding-top:10px;">Resident Address: </td>
                                            <td>
                                                <span t-field="o.street"/><br/>
                                                <span t-field="o.street2"/><br/>
                                                <span t-field="o.city"/><br/>
                                                <span t-field="o.state_id"/>  
                                                <span t-field="o.zip"/><br/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding-top:10px;" valign="top">School Address: </td>
                                            <td>
                                                <span t-field="res_company.street"/><br/>
                                                <span t-field="res_company.street2"/><br/>
                                                <span t-field="res_company.city"/><br/>
                                                <span t-field="res_company.state_id"/>  <span t-field="res_company.zip"/><br/>
                                            </td>
                                        </tr>
                                        <tr>
                                           <td style="padding-top:10px;">Email:</td>
                                            <td><span t-field="res_company.email"/></td>
                                       </tr>
                                       <tr>
                                           <td style="padding-top:5px;">Phone:</td>
                                            <td><span t-field="res_company.phone"/></td>
                                       </tr>
                                    </table>
                                </center>
                            </div>
                            <div style="height:10%;width:100%;color:red;text-align:center;font-size:10px;margin-top:10px;">
                                <p>This Card is the Property of <span t-field="res_company.name"/> If found please return to us immediately</p>
                            </div>
                            <div style="height:10%;width:100%;color:black;text-align:center;font-size:10px;margin-bottom:-12px;margin-top:-5px">
                                <p><span t-field="res_company.website"/></p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>

        <record id="paperformat_employee_backside_icard" model="report.paperformat">
            <field name="name">Employee Backside Icard</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">99</field>
            <field name="page_width">67</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">40</field>
            <field name="dpi">70</field>
        </record>

        <record id="employee_backside_icard_report" model="ir.actions.report">
            <field name="name">Light Id-card Report BACK</field>
            <field name="model">res.partner</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">jt_education_reports.employee_backside_icard_template</field>
            <field name="report_file">jt_education_reports.employee_backside_icard_template</field>
            <field name="paperformat_id" ref="jt_education_reports.paperformat_employee_backside_icard"/>
            <field name="print_report_name">(object.name)</field>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="binding_type">report</field>
        </record>

        <!-- <report 
            id="employee_backside_icard_report"
