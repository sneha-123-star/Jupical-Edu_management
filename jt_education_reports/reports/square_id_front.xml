<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <template id="square_classic_icard">
            <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                <div class="page">
                    <div style="width:670px;height:998px; solid #14877d;background-image:url('jt_education_reports/static/src/img/square_front.png')">
                        
                        <div style="height:10%;color:black;margin-left:460px;">
                            <div style="width:100%;float:right;margin-top:30px;">
                                <img t-attf-src="data:image/png;base64,{{res_company.logo}}" style="width:110px;height:80px;"/>
                                <p><span style="font-size:20px;" t-field="res_company.name"/></p>
                            </div>
                        </div>
                        <div style="clear:both;"/>
                        <div>
                            <div style="margin-left:230px;">
                                <img t-attf-src="data:image/png;base64,{{o.image_1920}}" style="height:210px;width:215px;margin-top:33px;"/>
                            </div>
                        </div>            
                        <div style="text-align:center;">
                            <p style="font-size:35px;margin-top:50px;color:black;font-weight:bold;text-transform:uppercase;"><span t-field="o.name"/></p>
                        </div>
                        <div style="align:center;">
                            <center>
                                <table class="table table-borderless border border-right-0 border-left-0"  style="align:center;width:auto;height:150px;font-size:20px;">
                                        <tr>
                                            <td style="font-weight:bold;">ID No. :</td>
                                            <td><span t-field="o.stud_id"/></td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold;">Standard :</td>
                                            <td><span t-field="o.standard.name"/> - <span t-field="o.div.name"/></td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold;">Phone :</td>
                                            <td><span t-field="o.phone"/></td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight:bold;">Valid Till :</td>
                                            <td><span t-field="o.curr_year"/></td>
                                        </tr>
                                </table>
                                <div>
                                    <img alt="barcode" t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.stud_id, 600, 120)" style="text-align:center;height:70px;width:300px;padding:8px;margin-top:5px;"/>
                                </div>
                            </center>
                        </div>  
                    </div>
                </div>
            </t>
        </t>
    </template>

    <record id="square_front_idcard" model="report.paperformat">
        <field name="name">Employee Front Icard</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">143</field>
        <field name="page_width">100</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">2</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">40</field>
        <field name="dpi">90</field>
    </record>

    <record id="employee_classic_front_icard_report" model="ir.actions.report">
        <field name="name">Square Id-Card Report FRONT</field>
        <field name="model">res.partner</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">jt_education_reports.square_classic_icard</field>
        <field name="report_file">jt_education_reports.square_classic_icard</field>
        <field name="paperformat_id" ref="jt_education_reports.square_front_idcard"/>
        <field name="print_report_name">(object.name)</field>
        <field name="binding_model_id" ref="base.model_res_partner"/>
        <field name="binding_type">report</field>
    </record>

