<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <template id="purple_icard_back_report">
                <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div style="width:100%;height:100%;">
                        <div style="width:670px;height:998px;background-image:url('jt_education_reports/static/src/img/id_purple_backend.png')">
                            <div style="height:30%;text-align:center;margin-top:200px;">
                                <center>
                                    <img t-attf-src="data:image/png;base64,{{res_company.logo}}" style="width:110px;height:80px;margin-top:15px;"/>
                                    <p style="margin-top:30px;"><span style="font-size:30px;color:black;" t-field="res_company.name"/></p>
                                </center>
                            </div>
                            
                            <!-- body -->
                            <div style="height:50%;text-align:center;margin-top:0px;">
                                <center>
                                    
                                    <table style="font-size:25px;margin-top:0px;margin-left:20px;">
                                        <tr>
                                            <td valign="top">Resident Address: </td>
                                            <td>
                                                <span t-field="o.street"/><br/>
                                                <span t-field="o.street2"/><br/>
                                                <span t-field="o.city"/><br/>
                                                <span t-field="o.state_id"/>  
                                                <span t-field="o.zip"/><br/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td valign="top">School Address: </td>
                                            <td>
                                                <span t-field="res_company.street"/><br/>
                                                <span t-field="res_company.street2"/><br/>
                                                <span t-field="res_company.city"/><br/>
                                                <span t-field="res_company.state_id"/>  <span t-field="res_company.zip"/><br/>
                                                <span t-field="res_company.country_id"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding-top:30px;">Email:</td>
                                            <td><span t-field="res_company.email"/></td>
                                        </tr>
                                        <tr>
                                            <td style="padding-top:30px;">Phone:</td>
                                            <td><span t-field="res_company.phone"/></td>
                                        </tr>
                                    </table>
                                </center>
                                </div>
                                <div style="text-align:center;font-size:20px;margin-top:80px;color:black;">
                                    <span t-field="res_company.website"/>
                                </div>
                            </div>
                    </div>
                </div>
                </t>
            </t>
        </template>

        <record id="purple_back_idcard" model="report.paperformat">
            <field name="name">Employee Green Back Icard</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">143</field>
            <field name="page_width">100</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">2</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">40</field>
            <field name="dpi">90</field>
        </record>

        <record id="purple_back_icard_report" model="ir.actions.report">
            <field name="name">Purple Id-Card Report BACK</field>
            <field name="model">res.partner</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">jt_education_reports.purple_icard_back_report</field>
            <field name="report_file">jt_education_reports.purple_icard_back_report</field>
            <field name="paperformat_id" ref="jt_education_reports.purple_back_idcard"/>
            <field name="print_report_name">(object.name)</field>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="binding_type">report</field>
        </record>

        <!-- <report 
            id="purple_back_icard_report"
            model="res.partner"
            string=" Purple Id-Card Report BACK"
            report_type="qweb-pdf"
            name="ae_education_reports.purple_icard_back_report"
            file="ae_education_reports.purple_icard_back_report"
            print_report_name="object.name"
            paperformat="ae_education_reports.purple_back_idcard"
        /> -->

    </data>
</odoo>
