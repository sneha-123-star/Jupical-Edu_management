<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="employee_icard_template">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div style="width:100%;height:100%;border:4px solid #14877d;border-radius:25px;background-image:url('jt_education_reports/static/src/img/ninteen.jpg')">
                            <div style="height:10%;color:black;text-align:center;">
                                <div style="width:20%;float:left;">
                                    <img t-attf-src="data:image/png;base64,{{res_company.logo}}" style="width:30px;height:30px;margin-top:10px;"/>
                                </div>
                                <div style="width:80%;float:right;margin-top:10px;">
                                    <p><span style="font-size:15px;" t-field="res_company.name"/></p>
                                </div>
                            </div>
                            <div style="clear:both;"/>
                            <div style="height:60%;text-align:center;">
                                <img t-attf-src="data:image/png;base64,{{o.image_1920}}" style="border-radius:25px;height:100px;width:100px;margin-top:6px;"/>
                                
                                <p style="font-size:15px;color:black;font-weight:bold;"><span t-field="o.name"/></p>
                                
                                <p style="font-size:12px;color:black;margin-top:-15px;">ID NUMBER: <span t-field="o.stud_id"/></p>
                                    
                                <p style="font-size:10px;margin-top:-12px;"><strong>Standard:</strong>&#160;&#160;&#160;<span t-field="o.standard.name"/> - <span t-field="o.div.name"/></p>
                                
                                <p style="font-size:10px;margin-top:-12px;"><strong>Phone:</strong>&#160;&#160;&#160;<span t-field="o.phone"/></p>

                                <p style="font-size:10px;margin-top:-12px;"><strong>Valid Till:</strong>&#160;&#160;&#160;<span t-field="o.curr_year"/></p>
                            </div>
                            <div style="height:30%;text-align:center;background-color:white;border-bottom-left-radius:20px;border-bottom-right-radius:20px;">
                                <img alt="barcode" t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.stud_id, 600, 120)" style="text-align:center;height:25px;width:110px;margin-top:5px;margin-bottom:5px;"/>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>

        <record id="paperformat_employee_icard" model="report.paperformat">
            <field name="name">Employee Icard</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">99</field>
            <field name="page_width">67</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">40</field>
            <field name="dpi">70</field>
        </record>

        <record id="employee_icard_report" model="ir.actions.report">
            <field name="name">Light Id-card Report FRONT</field>
            <field name="model">res.partner</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">jt_education_reports.employee_icard_template</field>
            <field name="report_file">jt_education_reports.employee_icard_template</field>
            <field name="paperformat_id" ref="jt_education_reports.paperformat_employee_icard"/>
            <field name="print_report_name">(object.name)</field>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="binding_type">report</field>
        </record>
        
