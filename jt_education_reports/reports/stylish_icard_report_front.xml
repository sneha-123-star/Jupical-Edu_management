<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="vertical_icard_template">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div style="height:100%;width:100%;">
                            <div style="width:100%;height:100%;background-image:url('jt_education_reports/static/src/img/twelve.jpg')">
                                <div style="height:30%;text-align:center;">
                                    <img t-attf-src="data:image/png;base64,{{res_company.logo}}" style="width:50px;height:30px;"/>
                                    <p><span style="font-size:12px;" t-field="res_company.name"/></p>
                                </div>
                                <div style="height:50%;text-align:center;">
                                    <img t-attf-src="data:image/png;base64,{{o.image_1920}}" style="border-radius:100px;height:100px;width:100px;margin-bottom:10px;"/>
                                    <h5><span t-field="o.name"/></h5>
                                    <p style="font-size:10px;color:black;">ID NUMBER: <span t-field="o.stud_id"/></p>
                                    <p style="font-size:10px;color:black;margin-top:-5px;">Standard: <span t-field="o.standard.name"/> - <span t-field="o.div.name"/></p>
                                    <p style="font-size:10px;color:black;margin-top:-5px;">Valid Till: <span t-field="o.curr_year"/></p>
                                    <img alt="barcode" t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.stud_id, 600, 120)" style="text-align:center;height:30px;width:200px;"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>

        <record id="paperformat_vertical_icard" model="report.paperformat">
            <field name="name">Vertical Icard</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">99</field>
            <field name="page_width">67</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">2</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">40</field>
            <field name="dpi">72</field>
        </record>

        <record id="vertical_icard_report" model="ir.actions.report">
            <field name="name">Stylish Id-Card Report FRONT</field>
            <field name="model">res.partner</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">jt_education_reports.vertical_icard_template</field>
            <field name="report_file">jt_education_reports.vertical_icard_template</field>
            <field name="paperformat_id" ref="jt_education_reports.paperformat_vertical_icard"/>
            <field name="print_report_name">(object.name)</field>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="binding_type">report</field>
        </record>
        
