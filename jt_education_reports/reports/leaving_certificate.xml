<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data> 
        <template id="leavingcertificate_report_template">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div style="width:100%;height:100%;">
                            <div style="height:2000px;width:1414px;">
                                <div>
                                    <div style="padding-top:10px;">
                                        <div>
                                            <p style="align:center;text-align:center;">
                                                <img t-attf-src="data:image/png;base64,{{res_company.logo}}" style="width:180px;height:150px;margin-top:10px;"/>
                                            </p>
                                        </div>
                                        <div>
                                            <p style="align:center;text-align:center;"><span style="font-size:45px;color:black;" t-field="res_company.name"/></p>
                                        </div>
                                        <div>
                                            <p style="align:center;text-align:center;font-size:18px;">
                                                (<span t-field="res_company.street"/>,
                                                <span t-field="res_company.street2"/>,
                                                <span t-field="res_company.city"/>,
                                                <span t-field="res_company.state_id"/>  <span t-field="res_company.zip"/>,
                                                <span t-field="res_company.country_id"/>)
                                            </p>
                                            <p style="align:center;text-align:center;font-size:18px;">
                                                <strong>Email: </strong><span t-field="res_company.email"/>,<strong>Phone: </strong><span t-field="res_company.phone"/>,<strong>Website: </strong><span t-field="res_company.website"/>
                                            </p>
                                        </div>
                                        <div style="align:center;text-align:center;">
                                            <p style="align:center;text-align:center;text-transform:uppercase;color:black;font-size:35px;font-weight:bold;margin-top:30px;">School Leaving Certificate</p>
                                        </div>
                                    </div>
                                    <div style="margin-right:30px;margin-left:20px;margin-top:0px;" class="row"> 
                                        <p style="font-size:25px;margin-left:450px;"><strong>UID No.:</strong><span t-field="o.stud_id"/></p>
                                        <p style="font-size:25px;margin-left:80px;"><strong>GR No.:</strong><span t-field="o.gr_no"/></p>
                                    </div>
                                    <div style="margin-top:0px;align:center;text-align:left;margin-right:50px;margin-left:50px;">
                                        <center>
                                            <table class="table" style="font-size:25px;padding:10px;">
                                                <tbody style="border:solid 1px; border-color:black;">
                                                    <tr>
                                                        <td style="border: 1px solid black;">Name of Student: </td>
                                                        <td style="border: 1px solid black;"><span t-field="o.name"/></td>
                                                    </tr>
                                                    <tr>
                                                        <td style="border: 1px solid black;">Father's Name: </td>
                                                        <td style="border: 1px solid black;"><span t-field="o.father_name"/></td>
                                                    </tr>
                                                    <tr>
                                                        <td style="border: 1px solid black;">Mother's Name: </td>
                                                        <td style="border: 1px solid black;"><span t-field="o.mother_name"/></td>
                                                    </tr>
                                                    <tr>
                                                        <td style="border: 1px solid black;">Nationality: </td>
                                                        <td style="border: 1px solid black;"><span t-field="o.nationality"/></td>
                                                    </tr>
                                                    <tr>
                                                        <td style="border: 1px solid black;">Schedule Caste/Schedule Tribe: </td>
                                                        <td style="border: 1px solid black;"><span t-field="o.caste"/></td>
                                                    </tr>
                                                    <tr>
                                                        <td style="border: 1px solid black;">Date of First Admission in this school: </td>
                                                        <td style="border: 1px solid black;"><span t-field="o.date_admission"/></td>
                                                    </tr>
                                                    <tr>
                                                        <td style="border: 1px solid black;">Date of Birth: </td>
                                                        <td style="border: 1px solid black;"><span t-field="o.birthdate"/></td>
                                                    </tr>
                                                    <tr>
                                                        <td style="border: 1px solid black;">Last Class Studied by Student: </td>
                                                        <td style="border: 1px solid black;"><span t-field="o.last_std"/></td>
                                                    </tr>
                                                    <tr>
                                                        <td style="border: 1px solid black;">Whether student was detained in same class if so once/twice: </td>
                                                        <td style="border: 1px solid black;"><span t-field="o.detension"/></td>
                                                    </tr>
                                                    <tr>
                                                        <td style="border: 1px solid black;">Whether qualified for Promotion to higher class: </td>
                                                        <td style="border: 1px solid black;"><span t-field="o.promotion"/></td>
                                                    </tr>
                                                    <tr>
                                                        <td style="border: 1px solid black;">Total no. of working days: </td>
                                                        <td style="border: 1px solid black;"><span t-field="o.working_days"/></td>
                                                    </tr>
                                                    <tr>
                                                        <td style="border: 1px solid black;">Total no. of working days present: </td>
                                                        <td style="border: 1px solid black;"><span t-field="o.working_days_present"/></td>
                                                    </tr>
                                                    <tr>
                                                        <td style="border: 1px solid black;">General Conduct: </td>
                                                        <td style="border: 1px solid black;"><span t-field="o.conduct"/></td>
                                                    </tr>
                                                    <tr>
                                                        <td style="border: 1px solid black;">Date of application for certificate: </td>
                                                        <td style="border: 1px solid black;"><span t-field="o.lc_apply_date"/></td>
                                                    </tr>
                                                    <tr>
                                                        <td style="border: 1px solid black;">Date of issue of certificate: </td>
                                                        <td style="border: 1px solid black;"><span t-field="o.lc_issue_date"/></td>
                                                    </tr>
                                                    <tr>
                                                        <td style="border: 1px solid black;">Reason for Leaving This School: </td>
                                                        <td style="border: 1px solid black;"><span t-field="o.reason_for_leave"/></td>
                                                    </tr>
                                                    <tr>
                                                        <td style="border: 1px solid black;">Any other Remark: </td>
                                                        <td style="border: 1px solid black;"><span t-field="o.remarks"/></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </center>
                                    </div>
                                    <div t-if="res_company.signature" style="margin-top:0px;align:center;text-align:center;margin-right:0px;margin-left:30px;">
                                        <img t-att-src="image_data_uri(res_company.stamp_image)" style="margin-bottom:-60px;height:300px;width:300px;"/><br/>
                                        <img t-att-src="image_data_uri(res_company.signature)" style="margin-bottom:-60px;max-height: 6cm; max-width: 10cm;"/>
                                        <p style="color:black;font-weight:bold;font-size:30px;margin-top:0px;">__________________________</p>
                                        <p style="font-size:25px;color:black;"><span t-field="res_company.namep"/></p>
                                        <p style="font-size:20px;color:black;"><span style="font-style:italic" t-field="res_company.function"/></p>
                                    </div>
                                </div>
                            </div> 
                        </div>
                    </div>
                </t>
            </t>
        </template>

        <record id="leavingcertificate_template_paperformate" model="report.paperformat">
            <field name="name">Student Leaving Certificate</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">40</field>
            <field name="dpi">90</field>
        </record>

        <record id="leavingcerificate_report" model="ir.actions.report">
            <field name="name">Leaving Certificate</field>
            <field name="model">res.partner</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">jt_education_reports.leavingcertificate_report_template</field>
            <field name="report_file">jt_education_reports.leavingcertificate_report_template</field>
            <field name="paperformat_id" ref="jt_education_reports.leavingcertificate_template_paperformate"/>
            <field name="print_report_name">(object.name)</field>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="binding_type">report</field>
        </record>
        
