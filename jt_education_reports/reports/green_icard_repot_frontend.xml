<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <template id="green_icard_report">
                <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div style="width:100%;height:100%;">
                        <div style="width:670px;height:998px;background-image:url('jt_education_reports/static/src/img/id_front.png')">
                            
                            <div>
                                <div style="height:10%;width:100%;align:center;">
                                    <center>
                                        <p><span style="font-size:30px;color:black;" t-field="res_company.name"/></p>
                                    </center>
                                </div>
                            </div>
                            <div style="clear:both;"/>
                            <div style="height:30%;">
                                <div style="margin-left:223px;margin-top:80px;">
                                    <img t-attf-src="data:image/png;base64,{{o.image_1920}}" style="height:225px;width:229px;border-radius:150px;"/>
                                </div>
                                <div style="text-align:center;">
                                    <p style="font-size:28px;margin-top:80px;color:black;font-weight:bold;text-transform:uppercase;"><span t-field="o.name"/></p>
                                </div>
                            </div>
                            <div style="height:50;">
                                <center>
                                    <p style="font-size:25px;color:black;margin-top:170px;"><strong>ID NUMBER: </strong><span t-field="o.stud_id"/></p>
                                    <p style="font-size:25px;"><strong>Standard:</strong>&#160;&#160;&#160;<span t-field="o.standard.name"/> - <span t-field="o.div.name"/></p>
                                    
                                    <p style="font-size:25px;"><strong>Phone:</strong>&#160;&#160;&#160;<span t-field="o.phone"/></p>

                                    <p style="font-size:25px;"><strong>Valid Till:</strong>&#160;&#160;&#160;<span t-field="o.curr_year"/></p>

                                    <img alt="barcode" t-att-src="'/report/barcode/?barcode_type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.stud_id, 600, 120)" style="text-align:center;height:80px;width:450px;border:1px solid;padding:8px;"/>
                                </center>
                            </div>
                            
                        </div> 
                    </div>
                </div>
                </t>
            </t>
        </template>

        <record id="green_front_idcard" model="report.paperformat">
            <field name="name">Employee Green Front Icard</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">143</field>
            <field name="page_width">100</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">2</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">40</field>
            <field name="dpi">90</field>
        </record>

        <record id="employee_green_front_icard_report" model="ir.actions.report">
            <field name="name">Green Id-Card Report FRONT</field>
            <field name="model">res.partner</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">jt_education_reports.green_icard_report</field>
            <field name="report_file">jt_education_reports.green_icard_report</field>
            <field name="paperformat_id" ref="jt_education_reports.green_front_idcard"/>
            <field name="print_report_name">(object.name)</field>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="binding_type">report</field>
        </record>
        
