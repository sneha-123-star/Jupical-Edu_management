<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="vertical_backside_icard_template">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div style="height:100%;width:100%;">
                            <div style="width:100%;height:100%;background-image:url('jt_education_reports/static/src/img/twelve.jpg')">
                                <div style="height:30%;text-align:center;">
                                    <img t-attf-src="data:image/png;base64,{{res_company.logo}}" style="width:50px;height:30px;"/>
                                    <p><span style="font-size:12px;margin-top:10px;" t-field="res_company.name"/></p>
                                </div>
                                <div style="height:50%;text-align:center;">
                                    <center>
                                    <table style="font-size:9px;margin-top:10px;">
                                        <tr>
                                            <td valign="top">Resident Address: </td>
                                            <td>
                                                <span t-field="o.street"/><br/>
                                                <span t-field="o.street2"/><br/>
                                                <span t-field="o.city"/><br/>
                                                <span t-field="o.state_id"/>  
                                                <span t-field="o.zip"/><br/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td valign="top">School Address: </td>
                                            <td>
                                                <span t-field="res_company.street"/><br/>
                                                <span t-field="res_company.street2"/><br/>
                                                <span t-field="res_company.city"/><br/>
                                                <span t-field="res_company.state_id"/>  <span t-field="res_company.zip"/><br/>
                                                <span t-field="res_company.country_id"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="padding-top:10px;">Email:</td>
                                            <td><span t-field="res_company.email"/></td>
                                        </tr>
                                        <tr>
                                            <td style="padding-top:10px;">Phone:</td>
                                            <td><span t-field="res_company.phone"/></td>
                                        </tr>
                                    </table>
                                </center>
                                </div>
                                <div style="height:10%;text-align:center;margin-top:45px;">
                                    <p><span style="font-size:10px;" t-field="res_company.website"/></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>

        <record id="paperformat_vertical_backside_icard" model="report.paperformat">
            <field name="name">Vertical Icard Backside</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">99</field>
            <field name="page_width">67</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">2</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">40</field>
            <field name="dpi">72</field>
        </record>

        <record id="vertical_backside_icard_report" model="ir.actions.report">
            <field name="name">Stylish Id-Card Report BACK</field>
            <field name="model">res.partner</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">jt_education_reports.vertical_backside_icard_template</field>
            <field name="report_file">jt_education_reports.vertical_backside_icard_template</field>
            <field name="paperformat_id" ref="jt_education_reports.paperformat_vertical_backside_icard"/>
            <field name="print_report_name">(object.name)</field>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="binding_type">report</field>
        </record>

