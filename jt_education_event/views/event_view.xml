<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="event.act_event_registration_from_event">
            <field name="name">Students</field>
        </record>
        <record model="ir.ui.menu" id="event.menu_action_registration">
            <field name='name'>Students</field>
        </record>
        <record id="student_event_form_view" model="ir.ui.view">
            <field name="name">Student Event Form View</field>
            <field name="model">event.event</field>
            <field name="inherit_id" ref="event.view_event_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='seats_expected']" position="attributes">
                    <attribute name="string">Students</attribute>
                </xpath>
                <xpath expr="//label[@for='seats_limited']" position="attributes">
                    <attribute name="string">Maximum Students</attribute>
                </xpath>
            </field>
        </record>
        <record id="student_event_kanban_view" model="ir.ui.view">
            <field name="name">Student Event Kanban View</field>
            <field name="model">event.event</field>
            <field name="inherit_id" ref="event.view_event_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//kanban/templates/t/div/div/div[2]/h5" position="replace">
                    <h5 class="o_event_fontsize_11 p-0">
                        <a name="%(event.act_event_registration_from_event)d" type="action" context="{'search_default_expected': True}">
                            <t t-esc="record.seats_expected.raw_value"/> Expected Students
                        </a>
                        <t t-set="total_seats" t-value="record.seats_reserved.raw_value + record.seats_used.raw_value"/>
                        <div  class="pt-2 pt-md-0" t-if="total_seats > 0 and ! record.auto_confirm.raw_value"><br/>
                            <a class="pl-2" name="%(event.act_event_registration_from_event)d" type="action" context="{'search_default_confirmed': True}">
                                <i class="fa fa-level-up fa-rotate-90" title="Confirmed"/><span class="pl-2"><t t-esc="total_seats"/> Confirmed</span>
                            </a>
                        </div>
                    </h5>
                </xpath>
            </field>
        </record>
       

    </data>
</odoo>
