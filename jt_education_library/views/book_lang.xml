<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Book Language Form View-->
        <record id="booklang_form_view" model="ir.ui.view">
            <field name="name">Book Language Form View</field>
            <field name="model">book.language</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--Book Language Tree View-->
        <record id="booklang_tree_view" model="ir.ui.view">
            <field name="name">Book Language Tree View</field>
            <field name="model">book.language</field>
            <field name="arch" type="xml">
                <tree editable='top'>
                    <field name="name"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>