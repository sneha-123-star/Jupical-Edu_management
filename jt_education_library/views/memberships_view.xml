<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<!-- Memberships Form View-->
        <record id="memberships_form_view" model="ir.ui.view">
            <field name="name">Memberships Form View</field>
            <field name="model">library.memberships</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="memberships_new" string="New" type="object" class="oe_highlight" states="active,expire"/>
                        <button name="memberships_active" string="Active" type="object" class="oe_highlight" states="new,expire"/>
                        <button name="memberships_expire" string="Expire" type="object" class="oe_highlight" states="new,active"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,active,expire"></field>
                    </header>
                    <sheet>
                        <field name="memberships_image" widget='image' class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_128&quot;}" style="margin-top:30px;"/>
                        <group>
                            <group>
                                <field name="memberships_code" readonly="1"/>
                                <field name="student_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True}"/>
                                <field name="standard"/>
                                <field name="division"/>
                                <field name="roll_no"/>
                                <field name="emailid"/>
                            </group>
                            <group>
                                <field name="book_limit"/>
                                <field name="start_date" readonly="1"/>
                                <field name="end_date"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--Memberships Form Tree View-->
        <record id="memberships_tree_view" model="ir.ui.view">
            <field name="name">Memberships Tree View</field>
            <field name="model">library.memberships</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="student_id"/>
                    <field name="standard"/>
                    <field name="division"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state"/>     
                </tree>
            </field>
        </record>

        <!-- Memberships kanban view --> 
        <record id="memberships_kanban_view" model="ir.ui.view">
            <field name="name">Memberships Kanban View</field>
            <field name="model">library.memberships</field>
            <field name="arch" type="xml">
                <kanban group_delete="false">
                    <field name = "id"/>
                    <field name="student_id"/>
                    <field name="standard"/>
                    <field name="division"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                    <field name="memberships_image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <t t-if="record.memberships_image.raw_value">
                                    <div class="o_kanban_image">
                                        <img alt="Avatar" t-att-src="kanban_image('library.memberships', 'memberships_image',record.id.raw_value)"/>
                                    </div>
                                </t>
                                <t t-else="">
                                    <div class="o_kanban_image">
                                        <img alt="Avatar" src='/base/static/img/avatar_grey.png'/>
                                    </div>
                                </t>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name = "memberships_code"/><br/>
                                        <field name = "student_id"/><br/>
                                    </strong>
                                    <div class="o_kanban_tags_section"/>
                                    <ul>
                                        <li><field name="standard"/> - <field name="division"/></li>
                                        <li><field name="start_date"/><strong> -> </strong><field name = "end_date"/></li>
                                        <li><field name = "state"/></li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!--Memberships search view  -->
        <record id="memberships_search_view" model="ir.ui.view">
            <field name="name">Memberships Kanban View</field>
            <field name="model">library.memberships</field>
            <field name="arch" type="xml">
                <search string="Search Memberships">
                    <field name="memberships_code"/>
                    <field name="student_id"/>
                    <field name="standard"/>
                    <field name="division"/>
                    <filter string="New" name="new" domain="[('state','=','new')]"/>
                    <filter string="Active" name="active" domain="[('state','=','active')]"/>
                    <filter string="Expire" name="expire" domain="[('state','=','expire')]"/>
                    <group expand="1" string="Group By">
                        <filter string="Status" name="state" context="{'group_by':'state'}"/>
                        <filter string="Standard" name="standard" context="{'group_by':'standard'}"/>
                        <filter string="Division" name="division" context="{'group_by':'division'}"/>
                    </group>
                </search>
            </field>
        </record>

	</data>
</odoo>