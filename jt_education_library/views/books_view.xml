<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Books Form View-->
        <record id="books_form_view" model="ir.ui.view">
            <field name="name">Books Form View</field>
            <field name="model">books.books</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="books_code" readonly="1"/></h1>
                        </div>
                        <field name="books_image" widget="image" class="oe_avatar"/>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="author" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True}"/>
                                <field name="genres"/>
                                <field name="lang_id" widget="many2many_tags"/>
                                <field name="edition"/>
                            </group>
                            <group>
                                <field name="no_of_books"/>
                                <field name="no_of_books_issued"/>
                                <field name="no_of_books_lost"/>
                                <field name="no_of_books_available"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!--Books Tree View-->
        <record id="books_tree_view" model="ir.ui.view">
            <field name="name">Books Tree View</field>
            <field name="model">books.books</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="books_code" readonly="1"/>
                    <field name="name"/>
                    <field name="author"/>
                    <field name="genres"/>
                    <field name="lang_id"/>
                    <field name="no_of_books"/>
                </tree>
            </field>
        </record>

        <!-- Books kanban view -->  
        <record id="books_kanban_view" model="ir.ui.view">
            <field name="name">Books Kanban View</field>
            <field name="model">books.books</field>
            <field name="arch" type="xml">
                <kanban group_delete="false">
                    <field name = "id"/>
                    <field name = "books_code"/>
                    <field name = "name"/>
                    <field name = "author"/>
                    <field name="books_image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <t t-if="record.books_image.raw_value">
                                    <div class="o_kanban_image">
                                        <img alt="Avatar" t-att-src="kanban_image('books.books', 'books_image',record.id.raw_value)"/>
                                    </div>
                                </t>
                                <t t-else="">
                                    <div class="o_kanban_image">
                                        <img alt="Avatar" src='/jt_education_library/static/src/img/default_book.png'/>
                                    </div>
                                </t>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name = "books_code"/><br/>
                                        <field name="name"/><br/>
                                    </strong>
                                    <div class="o_kanban_tags_section"/>
                                    <ul>
                                        <li><field name = "author"/></li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record> 
        
        <!--Books search view  -->
        <record id="books_search_view" model="ir.ui.view">
            <field name="name">Books Search View</field>
            <field name="model">books.books</field>
            <field name="arch" type="xml">
                <search string="Search Books">
                    <field name="name"/>
                    <field name="author"/>
                    <field name="genres"/>
                    <field name="lang_id"/>
                    <group expand="1" string="Group By">
                        <filter string="Genres" name="genres" context="{'group_by':'genres'}"/>
                        <filter string="Language" name="lang_id" context="{'group_by':'lang_id'}"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>
