<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <template id="membership_card_template">
                <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="container">
                            <div class="row" style="align:center;background-color:#109e92;">
                                <div class="text-center">
                                    <p><span style="font-size:40px;"/>Student Membership Card</p>
                                </div>
                            </div>
                            <div class="row mt-1 mb-1">
                                <div class="col-6">
                                    <img style="width: 55px; height: 55px; object-fit: cover;" t-attf-src="data:image/png;base64,{{res_company.logo}}"/>
                                </div>
                                <div class="col-6">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <!--  -->
                                    <img style="width: 200px; height: 150px; object-fit: cover;" t-attf-src="data:image/png;base64,{{o.memberships_image}}"/>
                                </div>
                                <div class="col-6">
                                    <table class="table table-bordered">
                                        <tr>
                                            <td style="width:10%;font-size:10px;">
                                                <span>Name :</span>
                                            </td>
                                            <td style="width:10%;font-size:10px;">
                                                <span t-field="o.student_id.name"/> <span t-field="o.student_id.father_name"/> <span t-field="o.student_id.surname"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width:10%;font-size:10px;">
                                                Membership ID : 
                                            </td>
                                            <td style="width:10%;font-size:10px;">
                                                <span t-field="o.memberships_code"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width:10%;font-size:10px;">
                                                Book Issue Limit :
                                            </td>
                                            <td style="width:10%;font-size:10px;">
                                                <span t-field="o.book_limit"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width:10%;font-size:10px;">
                                                Start Date :
                                            </td>
                                            <td style="width:10%;font-size:10px;">
                                                <span t-field="o.start_date"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="width:10%;font-size:10px;">
                                                Expiry Date :
                                            </td>
                                            <td style="width:10%;font-size:10px;">
                                                <span t-field="o.end_date"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <div class="row" style="background-color:#109e92;margin-top:30px;margin-bottom:-30px;">
                                <div class="col-12">
                                    <div class="text-center">
                                        <p><span style="font-size:40px;"/><span t-field="res_company.name"/></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </template>

        <record id="paperformat_membership_card" model="report.paperformat">
            <field name="name">membership card</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">120</field>
            <field name="page_width">73</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">40</field>
            <field name="dpi">90</field>
        </record>

        <record id="report_membership_card" model="ir.actions.report">
            <field name="name">Membership Card</field>
            <field name="model">library.memberships</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">jt_education_library.membership_card_template</field>
            <field name="report_file">jt_education_library.membership_card_template</field>
            <field name="paperformat_id" ref="jt_education_library.paperformat_membership_card"/>
            <field name="print_report_name">(object.student_id.name)</field>
            <field name="binding_model_id" ref="jt_education_library.model_library_memberships"/>
            <field name="binding_type">report</field>
        </record>

        <!-- <report 
            id="report_membership_card"
            model="library.memberships"
            string="Membership Card"
            report_type="qweb-pdf"
            name="ae_education_library.membership_card_template"
            file="ae_education_library.membership_card_template"
            print_report_name="object.student_id.name"
            paperformat="ae_education_library.paperformat_membership_card"
        /> -->

    </data>
</odoo>
