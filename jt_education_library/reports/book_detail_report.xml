<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="books_report_template">
			<t t-call="web.basic_layout">
				<div class="page">
					<div>
						<div style="background-image:url('/jt_education_library/static/src/img/header_book.png');background-size: 100% 100%; height: 230px; overflow: visible !important;">
							<div class="float-right">
									<img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)" style="width:100px;height:80px;" class="float-left" alt="Logo" />
									<br/>
									<div class="float-left">
										<strong style="color:#3d2012;text-align:center;font-size:20px;">Books Detail</strong>
									</div>
									<!-- <div class="clearfix mb8"/> -->
							</div>
						</div>
					</div><br/><br/>
					<!-- <div class="oe_structure"/>  class="col-xs-12"-->
					<div style="margin-left:20px;margin-right:20px;">
						<center>
							<table class="table table-striped table-bordered" style="align:center;margin-top:30px;">
								<thead style="color:#3d2012;background-color:#f3cabc;">
									<th id="name">Books</th>
									<th id="book_name">Book Name</th>
									<th id="author">Author</th>
									<th id="genres">Generes</th>
									<th id="edi">Edition</th>
									<th id="nbk">No. Of Books</th>
								</thead>
								<tbody>
									<t t-foreach="docs" t-as="o">
										<tr>
											<td><t t-esc="o.books_code"/></td>
											<td><t t-esc="o.name"/></td>
											<td><t t-esc="o.author.name"/></td>
											<td><t t-esc="o.genres"/></td>
											<td><t t-esc="o.edition"/></td>
											<td><t t-esc="o.no_of_books"/></td>
										</tr>
									</t>
								</tbody>
						  </table>
						</center>
					</div>
					<div class="footer o_background_footer">
						<div style="background-color:#f3cabc;" class="text-center">
							<ul class="list-inline">
							   <li t-if="res_company.phone" class="list-inline-item"><i class="fa fa-phone" role="img" aria-label="Phone" title="Phone"/> <span t-field="res_company.phone"/></li>
							   <li t-if="res_company.email" class="list-inline-item"><i class="fa fa-at" role="img" aria-label="Email" title="Email"/> <span t-field="res_company.email"/></li>
							   <li t-if="res_company.website" class="list-inline-item"><i class="fa fa-globe" role="img" aria-label="Website" title="Website"/> <span t-field="res_company.website"/></li>
							   <li t-if="res_company.vat" class="list-inline-item">
								  <i class="fa fa-building-o" role="img" aria-label="Fiscal number"/>
								  <t t-esc="res_company.country_id.vat_label or 'Tax ID'"/>
								  : <span t-field="res_company.vat" />
							   </li>
							</ul>
							<div t-field="res_company.report_footer"/>
							   <div t-if="report_type == 'pdf'" class="text-muted">
								  Page:
								  <span class="page"/>
								  of
								  <span class="topage"/>
							   </div>
						</div>
					</div>
				</div>
			</t>
		</template>

		<record id="paperformat_issuebook_detail" model="report.paperformat">
			<field name="name">Book Issue Detail</field>
			<field name="default" eval="True"/>
			<field name="format">A4</field>
			<field name="page_height">0</field>
			<field name="page_width">0</field>
			<field name="orientation">Portrait</field>
			<field name="margin_top">10</field>
			<field name="margin_bottom">20</field>
			<field name="margin_left">0</field>
			<field name="margin_right">0</field>
			<field name="header_line" eval="False"/>
			<field name="header_spacing">40</field>
			<field name="dpi">90</field>
		</record>

		<record id="books_report" model="ir.actions.report">
            <field name="name">Book Detail</field>
            <field name="model">books.books</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">jt_education_library.books_report_template</field>
            <field name="report_file">jt_education_library.books_report_template</field>
            <field name="paperformat_id" ref="jt_education_library.paperformat_issuebook_detail"/>
            <field name="print_report_name">(object.name)</field>
            <field name="binding_model_id" ref="jt_education_library.model_books_books"/>
            <field name="binding_type">report</field>
        </record>

		<!-- <report 
			id="books_report"
			model="books.books"
			string="Book Detail"
			report_type="qweb-pdf"
			name="ae_education_library.books_report_template"
			file="ae_education_library.books_report_template"
			print_report_name="object.name"
			paperformat="ae_education_library.paperformat_issuebook_detail"
		/> -->
	</data>
</odoo>