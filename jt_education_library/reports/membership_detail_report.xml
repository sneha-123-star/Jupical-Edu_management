<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>   
        <template id="memberships_report_template">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page"> 
                        <div class="oe_structure"/>
                        <center>
                            <div style="text-align:center;align:center;">
                                <h2 class="mt16">
                                    <span>Membership Details</span>
                                </h2>
                            </div>
                            <div class="col-xs-8" style="margin:10px;margin-top:30px;">
                                <table class="table table-striped table-bordered" style="align:center;">
                                    <thead>
                                        <th id="membership_id">Membership ID</th>
                                        <th id="std_id">Student ID</th>
                                        <th id="std_name">Student Name</th>
                                        <th id="book_limit">Book Limit</th>
                                        <th id="start_date">Start Date</th>
                                        <th id="end_date">End Date</th>
                                        <th id='state'>State</th>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="docs" t-as="m">
                                            <tr>
                                                <td><t t-esc="m.memberships_code"/></td>
                                                <td><t t-esc="m.student_id.stud_id"/></td>
                                                <td><t t-esc="m.student_id.name"/></td>
                                                <td><t t-esc="m.book_limit"/></td>
                                                <td><t t-esc="m.start_date"/></td>
                                                <td><t t-esc="m.end_date"/></td>
                                                <td><t t-esc="m.state"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </center>
                    </div>
                </t>
            </t>
        </template>

        <record id="memberships_report" model="ir.actions.report">
            <field name="name">Memberships Detail</field>
            <field name="model">library.memberships</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">jt_education_library.memberships_report_template</field>
            <field name="report_file">jt_education_library.report_template</field>
            <field name="binding_model_id" ref="jt_education_library.model_library_memberships"/>
            <field name="binding_type">report</field>
        </record>

