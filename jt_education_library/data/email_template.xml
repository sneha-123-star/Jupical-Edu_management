<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="email_template_issuebooks_mail" model="mail.template">
            <field name="name">Sends Email when issue for books is created to a student</field>
            <field name="model_id" ref="jt_education_library.model_issue_books"/>
            <field name="subject">Issue created</field>
            <field name="email_to">${(object.student_id.email)}</field>
            <field name="email_from">${(object.student_id.user_id.email)}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${object.student_id.name}<br/><br/>

                        This is to inform you that you have been issued book(s) from library
                        
                        on ${object.datetime_issue} which you have to return on ${object.date_return}.

                        <br/><br/>
                        Best regards,
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>