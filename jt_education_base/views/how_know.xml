<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- How Know Form View-->
        <record id="howknow_form_view" model="ir.ui.view">
            <field name="name">How Know Form View</field>
            <field name="model">how.know</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--How know Tree View-->
        <record id="howknow_tree_view" model="ir.ui.view">
            <field name="name">Student Standard Tree View</field>
            <field name="model">how.know</field>
            <field name="arch" type="xml">
                <tree editable='top'>
                    <field name="name"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>