<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="admission_inq_form_view" model="ir.ui.view">
            <field name="name">admission.inq.form.view</field>
            <field name="model">admission.inquiry</field>
            <field name="arch" type="xml">
                <form string="Admission Inquiry">
                    <header>
                        <button name="confirm_reservation_inq" string="Confirm" states="draft" class="oe_highlight" type="object"/>
                        <button name="cancel_reservation_inq" string="Cancel" states="draft" class="oe_highlight" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <h1>New</h1>
                        <group>
                            <group style="margin-top:30px;">
                                <field name="name"/>
                                <field name="fname"/>
                                <field name="mname"/>
                                <field name="surname"/>
                                <field name="mobile"/>
                                <field name="gr_no"/>
                                <field name="sel_gen"/>
                                <field name="birthdate"/>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="howknow_id"/>
                            </group>
                            <group style="margin-top:30px;">
                                <field name="add1"/>
                                <field name="add2"/>   
                                <field name="city"/>
                                <field name="zip_code"/>
                                <field name="state_id"/>
                                <field name="country_id"/>
                                <field name="standard_id"/>
                                <field name="div_id"/>
                                <field name="year_id"/>
                                <field name="note"/>
                            </group>    
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="admission_inq_tree_view" model="ir.ui.view">
            <field name="name">admission.inq.tree.view</field>
            <field name="model">admission.inquiry</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="standard_id"/>
                    <field name="state_id"/>
                    <field name="country_id"/>
                </tree>
            </field>
        </record>

        <record id="admission_inq_search_view" model="ir.ui.view">
            <field name="name">admission.inq.search.view</field>
            <field name="model">admission.inquiry</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="standard_id"/>
                    <field name="state_id"/>
                    <field name="country_id"/>
                    <group expand="1" string="Group By">
                        <filter string="Status" name="status" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="admission_inq_kanban_view" model="ir.ui.view">
            <field name="name">admission.inq.kanban.view</field>
            <field name="model">admission.inquiry</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="standard_id"/>
                    <field name="state_id"/>
                    <field name="country_id"/>
                        <templates>
                            <t t-name="kanban-box">
                                <div class="oe_kanban_global_click">
                                    <div class="oe_kanban_details">
                                        <div name="tags"/>
                                            <ul>
                                                <li>
                                                    <b>Name:</b>
                                                    <field name="name"/>
                                                </li>
                                                <li>
                                                    <b>Email:</b>
                                                    <field name="email"/>
                                                </li>
                                                <li>
                                                    <b>Phone:</b>
                                                    <field name="phone"/>
                                                </li>
                                                <li>
                                                    <b>Standard:</b>
                                                    <field name="standard_id"/>
                                                </li>
                                                <li>
                                                    <b>State:</b>
                                                    <field name="state_id"/>
                                                </li>
                                                <li>
                                                    <b>Country:</b>
                                                    <field name="country_id"/>
                                                </li>
                                            </ul>
                                    </div>
                                </div>
                            </t>
                        </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>

