<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

        <!--Student Assignment Action View -->
        <record model="ir.actions.act_window" id="action_student_assignment">
            <field name="name">Assignments</field>
            <field name="res_model">student.assignment</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!--Student Assignment Type Action View -->
        <record model="ir.actions.act_window" id="action_student_assignment_type">
            <field name="name">Assignment Types</field>
            <field name="res_model">assignment.type</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!--Student Assignment Submission Action View -->
        <record model="ir.actions.act_window" id="action_student_assignment_submission">
            <field name="name">Submissions</field>
            <field name="res_model">student.assignment.submission</field>
            <field name="view_mode">tree,form,pivot,graph</field>
        </record>

        <menuitem id="student_assignment_menu" name="Assignments"
                  parent="jt_education_base.root_menu" sequence="5"/>

        <menuitem id="student_assignment_submenu" name="Assignments"
                  parent="student_assignment_menu"
                  action="action_student_assignment"/>

        <menuitem id="student_assignment_submission_submenu" name="Submissions"
                  parent="student_assignment_menu"
                  action="action_student_assignment_submission"/>

        <menuitem id="config_assignment_menu" name="Assignment"
                  parent="jt_education_base.configurations_menu"/>

        <menuitem id="student_assignment_congif_submenu" name="Assignment Types"
                  parent="config_assignment_menu"
                  action="action_student_assignment_type"/>

    </data>
</odoo>