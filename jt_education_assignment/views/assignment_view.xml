<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="student_assignment_tree_view" model="ir.ui.view">
			<field name="name">student.assignment.tree</field>
			<field name="model">student.assignment</field>
			<field name="arch" type="xml">
				<tree string="Assignment">
					<field name="name"/>
					<field name="subject_id"/>
					<field name="faculty"/>
					<field name="assignment_type" string="Type"/>
					<field name="issued_date"/>
					<field name="submission_date"/>
					<field name="allocation_ids" invisible="1"/>
					<field name="assignment_submission" invisible="1"/>
					<field name="marks"/>
					<field name="state"/>
				</tree>
			</field>
		</record>

		<record id="student_assignment_form_view" model="ir.ui.view">
			<field name="name">student.assignment.form</field>
			<field name="model">student.assignment</field>
			<field name="arch" type="xml">
				<form string="Assignment">
					<header groups="base.group_user">
						<button name="act_publish" states="draft"
								type="object" string="Publish"
								class="oe_highlight"/>
						<button name="act_set_to_draft" states="publish"
								type="object" string="Set to Draft"
								class="oe_highlight"/>
						<button name="act_finish" class="oe_highlight"
								states="publish" type="object" string="Finish"/>
						<button name="act_cancel" states="publish"
								type="object" string="Cancel"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,publish,finish,cancel"/>
					</header>
					<sheet>
						<field name="state" invisible="1"/>
						<field name="active" invisible="1"/>
						<widget name="web_ribbon" title="Archived" bg_color="bg-danger"
								attrs="{'invisible': [('active', '=', True)]}"/>
						<div>
							<h1>
								<field name="name" placeholder="Assignment Name"
									   attrs="{'readonly':[('state','!=','draft')]}"
									   style="width: 100%"/>
							</h1>
						</div>
						<group>
							<group>
								<field name="subject_id" attrs="{'readonly':[('state','!=','draft')]}"/>
								<field name="faculty" attrs="{'readonly':[('state','!=','draft')]}" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True}"/>
								<field name="assignment_type" attrs="{'readonly':[('state','!=','draft')]}"/>
							</group>
							<group>
								<field name="standard_id"/>
								<field name="division_id"/>
								<field name="curr_year"/>
							</group>
						</group>
						<notebook>
							<page name="basic_information" string="Basic Information">
								<group>
									<group>
										<field name="issued_date" attrs="{'readonly':[('state','!=','draft')]}"/>
									</group>
									<group>
										<field name="submission_date" attrs="{'readonly':[('state','!=','draft')]}"/>
									</group>
									<group>
										<field name="marks" attrs="{'readonly':[('state','!=','draft')]}"/>
									</group>
								</group>
								<group>
									<field name="description" attrs="{'readonly':[('state','!=','draft')]}"/>
								</group>
							</page>
							<page name="allocation_infomation" string="Allocation Infomation">
								<field name="allocation_ids"
									   nolabel="1" domain="[('standard','=',standard_id),('div','=',division_id),('curr_year','=',curr_year)]"
									   options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True}">
									<tree string="Allocation">
										<field name="name"/>
										<field name="standard"/>
										<field name="div"/>
										<field name="roll_no"/>
									</tree>
								</field>
							</page>
							<page name="submissions" string="Submissions">
								<field name="assignment_submission" nolabel="1">
									<tree string="Submissions" create="0">
										<field name="student_id" widget="many2many_tags"/>
										<field name="state"/>
										<field name="submission_date"/>
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids"
							   widget="mail_followers" groups="base.group_user"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>

		<record id="student_assignment_pivot_view" model="ir.ui.view">
			<field name="name">student.assignment.pivot</field>
			<field name="model">student.assignment</field>
			<field name="arch" type="xml">
				<pivot string="Assignment Pivot View">
					<field name="state" type="row"/>
				</pivot>
			</field>
		</record>

		<record model="ir.ui.view" id="student_assignment_graph_view">
			<field name="name">student.assignment.graph</field>
			<field name="model">student.assignment</field>
			<field name="arch" type="xml">
				<graph string="Assignment Graph View" type="bar">
					<field name="state"/>
				</graph>
			</field>
		</record>

		<record id="student_assignment_search_view" model="ir.ui.view">
			<field name="name">student.assignment.search</field>
			<field name="model">student.assignment</field>
			<field name="arch" type="xml">
				<search string="Assignment">
					<field name="name"/>
					<field name="subject_id"/>
					<field name="faculty"/>
					<field name="marks"/>
					<field name="description"/>
					<field name="assignment_type"/>
					<field name="state"/>
					<field name="issued_date"/>
					<field name="submission_date"/>
					<field name="allocation_ids"/>
					<filter string="Today" name="filter_assignment_today"
							domain="[('submission_date', '&gt;=', time.strftime('%%Y-%%m-%%d 00:00:00')),('submission_date', '&lt;=', time.strftime('%%Y-%%m-%%d 23:59:59'))]"/>
					<filter string="Week" name="filter_assigenment_week"
							domain="[('submission_date', '&gt;=', (context_today()+relativedelta(weeks=-1,days=1,weekday=0)).strftime('%Y-%m-%d 00:00:00')),
									('submission_date', '&lt;', (context_today()+relativedelta(weekday=6)).strftime('%Y-%m-%d 23:59:59'))]"/>
					<filter string="Month" name="filter_assignment_month"
							domain="[('submission_date', '&lt;=', (datetime.date.today()+relativedelta(day=31)).strftime('%Y-%m-%d')),
									('submission_date', '&gt;=', (datetime.date.today()-relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
					<filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>

					<group expand="0" string="Group By...">
						<filter string="Name" domain="[]" name="group_by_assignment_name"
								context="{'group_by':'name'}"/>
						<filter string="Subject" domain="[]" name="group_by_assignment_subject"
								context="{'group_by':'subject_id'}"/>
						<filter string="Faculty" domain="[]" name="group_by_assignment_faculty"
								context="{'group_by':'faculty'}"/>
						<filter string="Marks" domain="[]" name="group_by_assignment_marks"
								context="{'group_by':'marks'}"/>
						<filter string="Assignment Type" domain="[]" name="group_by_assignment_type"
								context="{'group_by':'assignment_type'}"/>
						<filter string="State" domain="[]" name="group_by_assignment_state"
								context="{'group_by':'state'}"/>
						<filter string="Issued Date" domain="[]" name="group_by_assignment_issued_date"
								context="{'group_by':'issued_date'}"/>
						<filter string="Submission Date" domain="[]" name="group_by_assignment_submission"
								context="{'group_by':'submission_date'}"/>
					</group>
				</search>
			</field>
		</record>

	</data>
</odoo>
