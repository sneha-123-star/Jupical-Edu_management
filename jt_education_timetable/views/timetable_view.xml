<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="student_time_table_form" model="ir.ui.view">
            <field name="name">student.timetable.form</field>
            <field name="model">student.timetable</field>
            <field name="arch" type="xml">
                <form string="Student Timetable">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" default_focus="1" placeholder="Name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="standard"/>
                                <field name="division"/>
                                <field name="curr_year"/>
                            </group>
                        </group>
                        <group>
                            <field name="student_ids" domain="[('standard','=',standard),('div','=',division),('curr_year','=',curr_year)]">
                                <tree>
                                    <field name="name"/>
                                    <field name="standard"/>
                                    <field name="div"/>
                                    <field name="roll_no"/>
                                </tree>
                            </field>
                        </group>
                        <notebook>
                            <page string="Monday">
                                <field name="timetable_mon" domain="[('week_day','=', 0)]"  context="{'default_week_day': '0'} ">
                                    <tree string="Monday" editable="bottom">
                                        <field name="period_id"/>
                                        <field name="time_from" widget="float_time" />
                                        <field name="time_till" widget="float_time"/>
                                        <field name="subject"/>
                                        <field name="faculty_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True}"/>
                                        <field name="date" options = '{"datepicker":{"daysOfWeekDisabled":[0,2,3,4,5,6]}}'/>
                                        <field name="week_day" invisible='1'/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Tuesday">
                                <field name="timetable_tue" domain="[('week_day','=', 1)]"  context="{'default_week_day': '1'}">
                                    <tree string="Tuesday" editable="bottom">
                                        <field name="period_id"/>
                                        <field name="time_from" widget="float_time"/>
                                        <field name="time_till" widget="float_time"/>
                                        <field name="subject"/>
                                        <field name="faculty_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True}"/>
                                        <field name="date" options = '{"datepicker":{"daysOfWeekDisabled":[0,1,3,4,5,6]}}'/>
                                        <field name="week_day" invisible='1'/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Wednesday">
                                <field name="timetable_wed" domain="[('week_day','=', 2)]"  context="{'default_week_day': '2'}">
                                    <tree string="Wednesday" editable="bottom">
                                        <field name="period_id"/>
                                        <field name="time_from" />
                                        <field name="time_till"/>
                                        <field name="subject"/>
                                        <field name="faculty_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True}"/>
                                        <field name="date" options = '{"datepicker":{"daysOfWeekDisabled":[0,2,1,4,5,6]}}'/>
                                        <field name="week_day" invisible='1'/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Thursday">
                                <field name="timetable_thur" domain="[('week_day','=', 3)]"  context="{'default_week_day': '3'}">
                                    <tree string="Thursday" editable="bottom">
                                        <field name="period_id"/>
                                        <field name="time_from" widget="float_time" />
                                        <field name="time_till" widget="float_time"/>
                                        <field name="subject"/>
                                        <field name="faculty_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True}"/>
                                        <field name="date" options = '{"datepicker":{"daysOfWeekDisabled":[0,2,3,1,5,6]}}'/>
                                        <field name="week_day" invisible='1'/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Friday">
                                <field name="timetable_fri" domain="[('week_day','=', 4)]"  context="{'default_week_day': '4'}">
                                    <tree string="Friday" editable="bottom">
                                        <field name="period_id"/>
                                        <field name="time_from" widget="float_time" />
                                        <field name="time_till" widget="float_time"/>
                                        <field name="subject"/>
                                        <field name="faculty_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True}"/>
                                        <field name="date" options = '{"datepicker":{"daysOfWeekDisabled":[0,2,3,4,1,6]}}'/>
                                        <field name="week_day" invisible='1'/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Saturday">
                                <field name="timetable_sat" domain="[('week_day','=', 5)]"  context="{'default_week_day': '5'}">
                                    <tree string="Saturday" editable="bottom">
                                        <field name="period_id"/>
                                        <field name="time_from" widget="float_time" />
                                        <field name="time_till" widget="float_time"/>
                                        <field name="subject"/>
                                        <field name="faculty_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True}"/>
                                        <field name="date" options = '{"datepicker":{"daysOfWeekDisabled":[0,2,3,4,5,1]}}'/>
                                        <field name="week_day" invisible='1'/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Sunday">
                                <field name="timetable_sun" domain="[('week_day','=', 6)]"  context="{'default_week_day': '6'}">
                                    <tree string="Sunday" editable="bottom">
                                        <field name="period_id"/>
                                        <field name="time_from" widget="float_time" />
                                        <field name="time_till" widget="float_time"/>
                                        <field name="subject"/>
                                        <field name="faculty_id" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True}"/>
                                        <field name="date" options = '{"datepicker":{"daysOfWeekDisabled":[1,2,3,4,5,6]}}'/>
                                        <field name="week_day" invisible='1'/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="student_time_table_tree" model="ir.ui.view">
            <field name="name">student.timetable.tree</field>
            <field name="model">student.timetable</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="standard"/>
                    <field name="division"/>
                    <field name="curr_year"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>