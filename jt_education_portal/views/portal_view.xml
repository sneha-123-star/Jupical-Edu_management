     <!-- Template for result -->
    <template id="portal_result" name="Results">
        <t t-call="website.layout">
            <t t-foreach="result" t-as="result">
                <t t-set="additional_title">Results</t>
                <div class="oe_structure">
                    <div class="container">
                        <div id="wrap" style="margin-top: 100px !important;">
                            <br/>
                            <table class="table table-bordered" style="border:solid 1px; border-color:black;">
                                <tr>
                                    <td style="border:solid 1px; border-color:black;">
                                        <span t-field="res_company.logo" t-options="{'widget': 'image'}" role="img" width="50" t-att-src="'data:image/png;base64,%s' %res_company.logo" style="max-height: 40px; max-width: 80px;" class="pull-left img-responsive"/>
                                        <center>
                                            <h2 class="center"><span t-field="res_company.name"/></h2>
                                            <h3 class="center"><span t-field="result.exam_id.name"/></h3>
                                        </center>
                                    </td>
                                </tr>
                            </table>
                            <table class="table table-bordered" style="border:solid 1px; border-color:black;">
                                <tr>
                                    <td style="border:none;padding:0;padding-left:3px;">
                                        <b>Name:</b>
                                    </td>
                                    <td style="border:none;padding:0;padding-right:50px;">
                                        <span t-field="result.student_id.name"/>
                                    </td>
                                    <td style="border:none;padding:0;padding-left:3px;">
                                        <b>Standard:</b>
                                    </td>
                                    <td style="border:none;padding:0;padding-right:50px;">
                                        <span t-field="result.standard.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border:none;padding:0;padding-left:3px;">
                                        <b>Division:</b>
                                    </td>
                                    <td style="border:none;padding:0;padding-right:50px;">
                                        <span t-field="result.division.name"/>
                                    </td>
                                    <td style="border:none;padding:0;padding-left:3px;">
                                        <b>Year:</b>
                                    </td>
                                    <td style="border:none;padding:0;padding-right:50px;">
                                        <span t-field="result.academic_year.name"/>
                                    </td>
                                </tr>
                            </table>
                            <table class="table" style="border:solid 1px; border-color:black;">
                                <tbody>
                                    <th style="border: 1px solid black; text-align:center; background-color: #6bb1b0; color: black;">Subjects</th>
                                    <th style="border: 1px solid black; text-align:center; background-color: #6bb1b0; color: black;">Min Marks</th>
                                    <th style="border: 1px solid black; text-align:center; background-color: #6bb1b0; color: black;">Marks Obtained</th>
                                    <th style="border: 1px solid black; text-align:center; background-color: #6bb1b0; color: black;">Total Marks</th>
                                    <th style="border: 1px solid black; text-align:center; background-color: #6bb1b0; color: black;">Subject Pass/Fail</th>
                                    <th style="border: 1px solid black; text-align:center; background-color: #6bb1b0; color: black;">Grade</th>
                                    <tr t-foreach="result.subject_line" t-as="rsubline">
                                        <td style="border: 1px solid black;"><t t-esc="rsubline.subject_id.code"/> - <t t-esc="rsubline.subject_id.name"/></td>
                                        <td style="border: 1px solid black;"><t t-esc="rsubline.pass_mark"/></td>
                                        <td style="border: 1px solid black;"><t t-esc="rsubline.mark_scored"/></td>
                                        <td style="border: 1px solid black;"><t t-esc="rsubline.mark"/></td>
                                        <td style="border: 1px solid black;" t-if="rsubline.pass_or_fail == True">
                                            <strong>Pass</strong>
                                        </td>
                                        <td style="border: 1px solid black;" t-if="rsubline.pass_or_fail == False">
                                            <strong>Fail</strong>
                                        </td>
                                        <td style="border: 1px solid black;"><t t-esc="rsubline.grade_id.name"/></td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: bold; font-size: 16px; border: 1px solid black;"></td>
                                        <td style="font-weight: bold; font-size: 16px; border: 1px solid black;">Total</td>
                                        <td style="font-weight: bold; font-size: 16px; border: 1px solid black;"><t t-esc="result.total_mark_scored"/></td>
                                        <td style="font-weight: bold; font-size: 16px; border: 1px solid black;"><t t-esc="result.total_mark"/></td>
                                        <td style="font-weight: bold; font-size: 16px; border: 1px solid black;"></td>
                                    </tr>
                                    <tr>
                                        <th style="font-weight: bold; font-size: 16px; text-align:left;border: 1px solid black;">Percentage:</th>
                                        <td style="font-weight: bold; font-size: 16px;border: 1px solid black;"><t t-esc="result.percentage"/></td>
                                    </tr>
                                    <tr>
                                        <th style="font-weight: bold; font-size: 16px; text-align:left;border: 1px solid black;">Result:</th>
                                        <!-- <td><t t-esc="result.pass_fail_full"/></td> -->
                                        <td style="font-weight: bold; font-size: 16px;border: 1px solid black;" t-if="result.pass_fail_full == False">
                                            <strong>Fail</strong>
                                        </td>
                                        <td style="font-weight: bold; font-size: 16px;border: 1px solid black;" t-if="result.pass_fail_full == True">
                                            <strong>Pass</strong>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

