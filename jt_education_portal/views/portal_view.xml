<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="pay_meth_link" inherit_id="portal.portal_layout">
        <xpath expr="//div[hasclass('o_portal_wrap')]" position="attributes">
            <attribute name="style">margin-top: 100px !important;
            </attribute>

        </xpath>
    </template>

    <template id="ae_eduction_portal_access" name="Portal My Home : Education"
              inherit_id="portal.portal_my_home" priority="30">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <div class="row">
                <dl t-if="not user_id.partner_id.is_parent" class="col-md-4">
                    <dt>Library Details</dt>
                    <dd> - <a href="/my/issue_books_list">Issue Books</a></dd>
                    <dd> - <a href="/my/membership">Membership</a></dd>
                </dl>
                <dl t-if="not user_id.partner_id.is_parent" class="col-md-4">
                    <dt>Exam Details</dt>
                    <dd> - <a href="/my/exam_list">Exams</a></dd>
                    <dd> - <a href="/my/result_list">Results</a></dd>
                </dl>
                <dl t-if="not user_id.partner_id.is_parent" class="col-md-4">
                    <dt>Assignment Details</dt>
                    <dd> - <a href="/my/assignment_list">Assignments</a></dd>
                    <dd> - <a href="/my/submission">Submissions</a></dd>
                </dl>
                <dl t-if="not user_id.partner_id.is_parent" class="col-md-4">
                    <dt>Events Details</dt>
                    <dd> - <a href="/my/event">Events</a></dd>
                </dl>
                <dl t-if="not user_id.partner_id.is_parent" class="col-md-4">
                    <dt>Timetable Details</dt>
                    <dd> - <a href="/my/timetable_list"> Timetable List</a></dd>
                </dl>
                <dl t-if="not user_id.partner_id.is_parent" class="col-md-4">
                    <dt>Fees Details</dt>
                    <dd> - <a href="/my/fees_list">Fees</a></dd>
                </dl>

                <dl t-if="not user_id.partner_id.is_student" class="col-md-4">
                    <dt>Students Details</dt>
                    <dd> - <a href="/my/student_list">Students</a></dd>
                </dl>
            </div>
        </xpath>
    </template>

    <!-- Template for issue book List -->
    <template id="portal_issue_books_list" name="Issue List">
        <t t-call="website.layout">
            <t t-set="additional_title">Issue List</t>
            <div class="oe_structure">
                <div class="container">
                    <div id="wrap">
                        <br/>
                        <table class="table" style="margin-top: 100px !important;">
                            <thead style="background-color: #6bb1b0; color: black;">
                                <th style="text-align:left">Issue Books</th>
                                <th style="text-align:left">Date of Return</th>
                                <th style="text-align:left">Book</th>
                            </thead>
                            <tbody>
                                <tr t-foreach="issue_books_list" t-as="info">
                                    <tr>
                                        <td><a t-att-href="info"><t t-esc="info_value.issuebooks_code"/></a></td>
                                        <td><a t-att-href="info"><t t-esc="info_value.date_return"/></a></td>
                                        <td><a t-att-href="info"><t t-esc="info_value.name.name"/></a></td>
                                    </tr>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Template for issue books -->
    <template id="portal_issue_books" name="Issue Books">
        <t t-call="website.layout">
          <t t-foreach="issue_books" t-as="issue">
            <t t-set="additional_title">Issue Books</t>
                <div class="oe_structure">
                    <div class="container">
                        <div id="wrap">
                            <br/>
                            <table class="table table-bordered" style="border:solid 2px; border-color:black; margin-top: 100px !important;">
                                <tr>
                                    <td style="border:none;padding:0;padding-left:3px;">
                                        <b>Issue ID:</b>
                                    </td>
                                    <td style="border:none;padding:0;padding-right:50px;">
                                        <span t-field="issue.issuebooks_code"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border:none;padding:0;padding-left:3px;">
                                        <b>Date of Issue:</b>
                                    </td>
                                    <td style="border:none;padding:0;padding-right:50px;">
                                        <span t-field="issue.datetime_issue"/>
                                    </td>
                                    <td style="border:none;padding:0;padding-left:3px;">
                                        <b>Date of Return:</b>
                                    </td>
                                    <td style="border:none;padding:0;padding-right:50px;">
                                        <span t-field="issue.date_return"/>
                                    </td>
                                </tr>
                            </table>
                            <table class="table">
                                <thead style="background-color: #6bb1b0; color: black;">
                                    <th style="text-align:left">Book</th>
                                    <th style="text-align:left">Author</th>
                                    <th style="text-align:left">Genres</th>
                                    <!-- <th style="text-align:left">Language</th> -->
                                </thead>
                                <tbody>
                                    <tr>
                                        <tr t-foreach="issue.issuebookslines_ids" t-as="issueline">
                                            <td><t t-esc="issueline.name.name"/></td>
                                            <td><t t-esc="issueline.author.name"/></td>
                                            <td><t t-esc="issueline.genres"/></td>
                                            <!-- <td><t t-esc="issueline.lang_id.name"/></td> -->
                                        </tr>
                                    </tr>
                                </tbody>
                            </table>
                            <table class="table">
                                <thead style="background-color: #6bb1b0; color: black;">
                                    <th style="text-align:left">Language</th>
                                </thead>
                                <tbody>
                                    <tr t-foreach="issue.issuebookslines_ids.lang_id" t-as="il">
                                        <td><t t-esc="il.name"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

