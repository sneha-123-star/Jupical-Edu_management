<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Export Fees History Report -->
    <record id="export_fees_history_wizard_form" model="ir.ui.view">
        <field name="name">Export Fees History</field>
        <field name="model">export.fees.history.wizard</field>
        <field name="arch" type="xml">
            <form string="Export Fees History">
                <field name="state" invisible="1"/>
                <div states="choose">
                    <br/><span>Select Year &#160; &#160; &#160; &#160;</span> 
                    <field name="formats" widget="radio" options="{'horizontal': true}"  required="1"/>
                </div>
                <div states="choose">
                    <group states="choose" attrs="{'invisible': [('formats', '!=', 'spec_year')]}">
                        <field name="year" string="Year" attrs="{'invisible': [('formats', '!=', 'spec_year')]}"/>
                    </group>
                </div>
                <div states="get">
                    <group>
                        <field name="name" colspan="4" invisible="1"/>
                        <field name="report" filename="name" colspan="4"/>
                    </group>
                </div>
                <footer>
                    <button states="choose" name="generate_report" string="Generate Fees Entries"
                        type="object" class="oe_highlight"/>
                    <span states="choose"> Or </span>
                    <button string="Cancel" class="oe_link oe_highlight" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>